<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="textColorSub">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editTextLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edittext_unfocused_bg</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>

    <style name="editTextImageView">
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:background">@null</item>
    </style>


    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/plus_jakart_sans_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="layout_goneMarginEnd">@dimen/_5sdp</item>

    </style>

    <style name="subHeadingText">
        <item name="theme">@style/textColorSub</item>
        <item name="android:theme">@style/textColorSub</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="editTextErrorMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/subHeadingText</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/red</item>
    </style>


</resources>
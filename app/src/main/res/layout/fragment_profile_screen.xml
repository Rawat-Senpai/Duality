<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profileFragment.ProfileFragmentScreen">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/plus_jakart_sans_medium"
                android:text="Lets setup your profile" />


                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F1DCDCDC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imaegView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/camera"/>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            <LinearLayout style="@style/editTextLinearLayout"
                android:layout_marginHorizontal="0dp">




                <EditText
                    android:id="@+id/etName"
                    style="@style/editTextStyle"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:inputType="textEmailAddress" />


            </LinearLayout>

            <LinearLayout style="@style/editTextLinearLayout"
                android:layout_marginHorizontal="0dp">



                <TextView
                    android:id="@+id/etGenderl"
                    style="@style/editTextStyle"
                    android:layout_weight="1"
                    android:hint="Gender"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:layout_height="10dp"
                    android:layout_width="10dp"
                    style="@style/editTextImageView"
                    android:src="@drawable/bottom_arrow"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <LinearLayout style="@style/editTextLinearLayout"
                android:layout_marginHorizontal="0dp">



                <EditText
                    android:id="@+id/etAge"
                    style="@style/editTextStyle"
                    android:layout_weight="1"
                    android:hint="Age"

                    android:inputType="number" />


            </LinearLayout>

            <LinearLayout style="@style/editTextLinearLayout"
                android:layout_marginHorizontal="0dp"
                android:minHeight="100dp"
                android:layout_gravity="start"
                android:gravity="start">




                <EditText
                    android:id="@+id/etBio"
                    style="@style/editTextStyle"
                    android:layout_weight="1"
                    android:hint="Bio"
                    android:inputType="textEmailAddress"
                    />


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:backgroundTint="#0484B3"
        android:enabled="true"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:lineHeight="22dp"
        android:text="Register"
        android:layout_marginHorizontal="20dp"
        android:textSize="15sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>